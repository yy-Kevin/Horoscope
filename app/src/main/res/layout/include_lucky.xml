<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="100dp">

        <RelativeLayout
            android:id="@+id/rl_lunckly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/lucky" />

            <ImageView
                android:id="@+id/iv_luncky_know1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/question" />

            <ImageView
                android:id="@+id/iv_luncky_know2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/crystal" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_lunckly"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/rl_lunckly"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="20dp"
            android:text="Lucky Number"
            android:textColor="@color/white" />

    </RelativeLayout>
